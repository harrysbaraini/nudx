{
  "name": "@nudx/cli",
  "version": "0.1.0",
  "description": "A simple CLI to create development environments",
  "author": "Vanderlei Sbaraini Amancio @harrysbaraini",
  "bin": {
    "nudx": "./bin/run"
  },
  "homepage": "https://github.com/harrysbaraini/nudx",
  "license": "MIT",
  "main": "dist/index.js",
  "repository": "harrysbaraini/nudx",
  "files": [
    "/bin",
    "/dist",
    "/npm-shrinkwrap.json",
    "/oclif.manifest.json"
  ],
  "dependencies": {
    "@oclif/core": "^2",
    "@oclif/plugin-help": "^5",
    "@oclif/plugin-plugins": "^2.4.4",
    "@types/handlebars": "^4.1.0",
    "handlebars": "^4.7.7",
    "inquirer": "^8",
    "js-yaml": "^4.1.0",
    "listr": "^0.14.3",
    "node-netstat": "^1.8.0",
    "pm2": "^5.3.0"
  },
  "oclif": {
    "bin": "nudx",
    "dirname": "nudx-cli",
    "commands": "./dist/commands",
    "hooks": {
      "prerun": [
        "./dist/hooks/prerun/ensureDirectories"
      ]
    },
    "plugins": [
      "@oclif/plugin-help",
      "@oclif/plugin-plugins"
    ],
    "topicSeparator": " ",
    "topics": {
      "site": {
        "description": "Commands to manage sites"
      }
    }
  },
  "scripts": {
    "compile-templates": "bin/dev internal compile-templates",
    "copy-files": "shx cp -rf files dist/files",
    "build": "yarn compile-templates && shx rm -rf dist && tsc -b -f && yarn copy-files",
    "lint": "eslint . --ext .ts --config .eslintrc",
    "lint-fix": "eslint . --ext .ts --config .eslintrc --fix",
    "format": "prettier --config .prettierrc 'src/**/*.ts' --write",
    "watch-format": "onchange 'src/**/*.ts' -- prettier --write {{changed}}",
    "postpack": "shx rm -f oclif.manifest.json",
    "posttest": "yarn lint",
    "prepack": "yarn build && oclif manifest && oclif readme",
    "buildpack": "oclif pack tarballs",
    "test": "mocha --forbid-only \"test/**/*.test.ts\"",
    "version": "oclif readme && git add README.md"
  },
  "husky": {
    "hooks": {
      "pre-commit": "yarn run format && yarn run lint-fix && yarn run lint"
    }
  },
  "engines": {
    "node": ">=18.0.0"
  },
  "bugs": "https://github.com/harrysbaraini/nudx/issues",
  "keywords": [
    "oclif"
  ],
  "types": "dist/index.d.ts"
}
