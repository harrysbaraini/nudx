{
  "lib": ["ES2022"],
  "compilerOptions": {
    "declaration": true,
    "importHelpers": true,
    "module": "ES2022",
    "moduleResolution": "Node",
    "strict": true,
    "target": "ES2022",
    "allowJs": true,
    "removeComments": true,
    "skipLibCheck": true,
    "esModuleInterop": true
  },
  "ts-node": {
    "esm": true,
    "experimentalSpecifierResolution": "node"
  }
}
