{
  "name": "nudx",
  "version": "0.0.2",
  "description": "A simple CLI to create development environments",
  "author": "Vanderlei Sbaraini Amancio @harrysbaraini",
  "bin": {
    "nudx": "./bin/run"
  },
  "homepage": "https://github.com/harrysbaraini/nudx",
  "license": "MIT",
  "main": "dist/index.js",
  "repository": "harrysbaraini/nudx",
  "files": [
    "/bin",
    "/dist",
    "/npm-shrinkwrap.json",
    "/oclif.manifest.json"
  ],
  "dependencies": {
    "@oclif/core": "^2",
    "@oclif/plugin-help": "^5",
    "@oclif/plugin-plugins": "^2.4.4",
    "@types/handlebars": "^4.1.0",
    "handlebars": "^4.7.7",
    "inquirer": "^8",
    "js-yaml": "^4.1.0",
    "listr": "^0.14.3",
    "node-netstat": "^1.8.0",
    "pm2": "^5.3.0"
  },
  "devDependencies": {
    "@oclif/test": "^2.3.15",
    "@trivago/prettier-plugin-sort-imports": "^4.1.1",
    "@types/chai": "^4",
    "@types/hogan.js": "^3.0.1",
    "@types/inquirer": "^9.0.3",
    "@types/js-yaml": "^4.0.5",
    "@types/listr": "^0.14.4",
    "@types/mocha": "^9.0.0",
    "@types/node": "^16.18.23",
    "@typescript-eslint/eslint-plugin": "^5.59.0",
    "@typescript-eslint/parser": "^5.59.0",
    "chai": "^4",
    "eslint": "^8.40.0",
    "eslint-config-oclif": "^4",
    "eslint-config-oclif-typescript": "^1.0.3",
    "eslint-plugin-unused-imports": "^2.0.0",
    "husky": "^8.0.3",
    "mocha": "^9",
    "oclif": "^3",
    "onchange": "^7.1.0",
    "prettier": "^2.8.7",
    "shx": "^0.3.3",
    "tslib": "^2.5.0",
    "tslint": "^6.1.3",
    "typescript": "^4.9.5"
  },
  "oclif": {
    "bin": "nudx",
    "dirname": "nudx-cli",
    "commands": "./dist/commands",
    "hooks": {
      "prerun": [
        "./dist/hooks/prerun/ensureDirectories"
      ]
    },
    "plugins": [
      "@oclif/plugin-help",
      "@oclif/plugin-plugins"
    ],
    "topicSeparator": " ",
    "topics": {
      "site": {
        "description": "Commands to manage sites"
      }
    }
  },
  "scripts": {
    "build": "shx rm -rf dist && tsc -b -f",
    "lint": "eslint . --ext .ts --config .eslintrc",
    "lint-fix": "eslint . --ext .ts --config .eslintrc --fix",
    "format": "prettier --config .prettierrc 'src/**/*.ts' --write",
    "watch-format": "onchange 'src/**/*.ts' -- prettier --write {{changed}}",
    "postpack": "shx rm -f oclif.manifest.json",
    "posttest": "yarn lint",
    "prepack": "yarn build && oclif manifest && oclif readme",
    "buildpack": "oclif pack tarballs",
    "test": "mocha --forbid-only \"test/**/*.test.ts\"",
    "version": "oclif readme && git add README.md"
  },
  "husky": {
    "hooks": {
      "pre-commit": "yarn run format && yarn run lint"
    }
  },
  "engines": {
    "node": ">=18.0.0"
  },
  "bugs": "https://github.com/harrysbaraini/nudx/issues",
  "keywords": [
    "oclif"
  ],
  "types": "dist/index.d.ts"
}
